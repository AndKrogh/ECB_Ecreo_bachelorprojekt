@page "/Employees"
@using ECBilling.Services
@using Models.DbEntities
@inject IGetEmployeesService GetEmployeesService

<h3>Employee List</h3>

@if (employees != null)
{

    <ul>
        @foreach (var employee in employees)
        {
            <li>@employee.FullName</li>
        }
    </ul>
}

@code {
    private List<Employee>? employees;

    protected override async Task OnInitializedAsync()
    {
        employees = await GetEmployeesService.GetEmployeesAsync();
    }
}
